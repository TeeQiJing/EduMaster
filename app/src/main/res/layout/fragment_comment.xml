<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/white"
    android:elevation="2dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center|left"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/BtnBack"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_back_comment" />

        <androidx.cardview.widget.CardView
            android:id="@+id/layout"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/gradient_background"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/post_user_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/gradient_background" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/post_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Â· 3 hours ago"
            android:textColor="#808080"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Post Title -->
    <TextView
        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="8dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Post Content -->
    <TextView
        android:id="@+id/post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_title"
        android:layout_marginTop="4dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Post content here..."
        android:textColor="#808080"
        android:textSize="16sp" />

    <!-- Post Actions -->
    <LinearLayout
        android:id="@+id/like_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="16dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/post_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#E9E9E9"
                android:text="19"
                android:textColor="#80000000"
                app:icon="@drawable/ic_like"
                app:iconTint="#80000000" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ic_liked"
                    android:layout_width="20dp"
                    android:layout_height="19dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_like_white" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <Button
            android:id="@+id/post_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:backgroundTint="#E9E9E9"
            android:text="5"
            android:textColor="#80000000"
            app:icon="@drawable/ic_comment"
            app:iconTint="#80020202" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/input_section"
        android:layout_below="@id/like_comment"
        android:nestedScrollingEnabled="true"
        tools:listitem="@layout/item_comment" />

    <LinearLayout
        android:id="@+id/input_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <EditText
            android:id="@+id/input_comment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:hint="Enter your comment..."
            android:padding="8dp" />

        <Button
            android:id="@+id/btn_send_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_gradient"
            android:text="Send"
            app:backgroundTint="@null" />
    </LinearLayout>

</RelativeLayout>
